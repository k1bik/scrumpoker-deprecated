<%= link_to user_path, class: 'icon' do %>
  <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="icon">
    <path stroke-linecap="round" stroke-linejoin="round" d="M6.75 15.75L3 12m0 0l3.75-3.75M3 12h18" />
  </svg>
<% end %>
<div class="form-wrapper">
  <%= form_with model: current_user, url: user_path, method: :put, html: {class: 'form-content'} do |form| %>
    <%= form.label :avatar, "Avatar:", class: "label" %>
    <%= form.file_field :avatar %>
    <%= form.label :name, "Name:", class: "label" %>
    <%= form.text_field :name, class: 'form-input', autofocus: true %>
    <%= form.submit "Update", class: 'button-border' %>
  <% end %>
</div>
